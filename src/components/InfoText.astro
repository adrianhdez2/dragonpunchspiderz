---
import { MapPin } from "@lucide/astro";
import InstagramIcon from "@/icons/InstagramIcon.astro";
import TiktokIcon from "@/icons/TiktokIcon.astro";
import YoutubeIcon from "@/icons/YoutubeIcon.astro";
import FacebookIcon from "@/icons/FacebookIcon.astro";

const redes = [
    {
        icon: YoutubeIcon,
        text: "@dragonpunchz",
        url: "https://www.youtube.com/@dragonpunchz",
    },
    {
        icon: TiktokIcon,
        text: "@dragonpunchspiderz",
        url: "https://www.tiktok.com/@dragonpunchspiderz",
    },
    {
        icon: InstagramIcon,
        text: "@seven_741",
        url: "https://www.instagram.com/seven_741",
    },
    {
        icon: FacebookIcon,
        text: "@TheSeven741",
        url: "https://www.facebook.com/TheSeven741",
    },
];
---

<section
    class="w-full items-center max-w-[1440px] h-full max-h-[200px] z-10 flex text-white gap-x-10"
>
    <img
        src="/profile.webp"
        alt="Image de DragonPunchSpiderZ"
        loading="lazy"
        class="aspect-square rounded-full size-24 lg:size-[200px] bg-[#C11C0F] border-2 lg:border-4 border-white shadow lg:flex hidden"
    />
    <div
        class="w-full h-full flex flex-col items-start justify-end gap-y-14 md:gap-y-0 md:justify-between"
    >
        <div class="flex flex-col items-start justify-start gap-y-4 md:gap-y-5">
            <h1 class="font-bold text-[32px] md:text-[40px]">
                Jorge Enrique Jiménez Moreno
            </h1>
            <p class="text-base md:text-xl">
                DISEÑADOR AUDIOVISUAL | MODELADOR 3D | MOTION GRAPHICS
            </p>
        </div>
        <ul
            class="w-full flex items-center justify-between text-base text-[#BBBBBA]"
        >
            <li class="flex items-center gap-x-2">
                <MapPin class="w-auto h-4 lgh-5 xl:h-6" />
                <span class="text-xs xl:text-base">Tabasco, México</span>
            </li>
            {
                redes.map((red) => (
                    <li>
                        <a
                            class="hidden md:flex items-center gap-x-2"
                            target="_blank"
                            rel="noopener noreferrer"
                            href={red.url}
                        >
                            <red.icon class="w-auto h-4 lgh-5 xl:h-6" />
                            <span class="text-xs xl:text-base">{red.text}</span>
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>
