<form
    id="contact-form"
    class="w-full max-w-[620px] flex flex-col mx-auto gap-8"
>
    <h2 class="uppercase text-white text-xl font-bold text-center">
        Contáctame
    </h2>
    <div class="w-full flex flex-col gap-5">
        <div class="w-full flex flex-col sm:flex-row gap-5">
            <input
                type="text"
                name="name"
                id="name"
                placeholder="Nombre"
                class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full flex-1 rounded-md text-[14px]"
                required
                autocomplete="name"
            />
            <input
                type="email"
                name="email"
                id="e-mail"
                placeholder="Correo electrónico"
                class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full flex-1 rounded-md text-[14px]"
                required
                autocomplete="email"
            />
        </div>
        <textarea
            name="message"
            id="message"
            placeholder="Déjame saber tu consulta"
            cols="30"
            rows="5"
            class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full resize-none rounded-md text-[14px]"
            autocomplete="off"
            required></textarea>
        <button
            type="submit"
            class="w-full p-3 text-white/80 cursor-pointer rounded-md bg-white/10 not-disabled:hover:bg-white/20 transition-colors duration-300 ease-in-out disabled:text-white/20"
            >Enviar</button
        >
    </div>
</form>
