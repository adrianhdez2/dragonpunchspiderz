---
const { class: className = "", id = "#", ariaLabel, ariaLabelledBy, role = "region" } = Astro.props;
---

<section 
    id={id} 
    class:list={["w-full max-w-[1440px] flex mx-auto p-6 md:px-14 md:py-8 xl:px-28 xl:py-14", className]}
    role={role}
    aria-label={ariaLabel}
    aria-labelledby={ariaLabelledBy}
    tabindex="-1"
>
    <slot />
</section>
