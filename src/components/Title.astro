---
const { 
    title, 
    class: className = '', 
    level = 2, 
    id,
    ariaLabel
} = Astro.props;

// Crear el elemento de encabezado dinámicamente según el nivel
const HeadingTag = `h${level}` as any;
---

<HeadingTag 
    id={id}
    class:list={["relative uppercase text-2xl lg:text-4xl font-bold tracking-[3.6px] text-[#060606]", className]}
    aria-label={ariaLabel || title}
    tabindex="-1"
>
    {title}

    <span 
        id="text" 
        class="perspective-normal absolute top-0.5 -left-0.5 text-2xl lg:text-4xl font-bold tracking-[3.6px] sombra-subtitulo"
        aria-hidden="true"
        role="presentation"
    >
        {title}
    </span>
</HeadingTag>
