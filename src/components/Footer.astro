---
import { redes } from "@/utils/constants";
---

<footer class="flex flex-col -space-y-[130px]">
    <div class="flex mx-auto flex-col items-center justify-center gap-4 z-10">
        <img
            src="/footer_img.webp"
            alt="Imagen de DragonPunchSpiderZ"
            width="220"
            height="220"
            class="aspect-square rounded-full"
        />
        <ul class="flex items-center gap-10">
            {
                redes.map((red) => (
                    <li>
                        <a
                            class="text-[#BBBBBA] hover:text-white transition-colors duration-300"
                            target="_blank"
                            rel="noopener noreferrer"
                            href={red.url}
                        >
                            <red.icon class="w-auto h-6" />
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
    <section id="contacto" class="bg-black p-6 md:px-14 md:pb-8 xl:px-28 pt-52 xl:pb-14 gap-14 shadow-footer">
        <div class="w-full">
            <form
                action="#"
                class="w-full max-w-[620px] flex flex-col mx-auto gap-8"
            >
                <h2 class="uppercase text-white text-xl font-bold text-center">
                    Contáctame
                </h2>
                <div class="w-full flex flex-col gap-5">
                    <div class="w-full flex flex-col sm:flex-row gap-5">
                        <input
                            type="text"
                            name="name"
                            id="name"
                            placeholder="Nombre"
                            class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full flex-1 rounded-md text-[14px]"
                            required
                            autocomplete="name"
                        />
                        <input
                            type="email"
                            name="e-mail"
                            id="e-mail"
                            placeholder="Correo electrónico"
                            class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full flex-1 rounded-md text-[14px]"
                            required
                            autocomplete="email"
                        />
                    </div>
                    <textarea
                        name="message"
                        id="message"
                        placeholder="Déjame saber tu consulta"
                        cols="30"
                        rows="5"
                        class="border border-white/25 text-white placeholder:text-white/80 p-3 w-full resize-none rounded-md text-[14px]"
                        autocomplete="off"
                        required
                    ></textarea>
                    <button type="submit" class="w-full p-3 text-white/80 cursor-pointer rounded-md bg-white/10 not-disabled:hover:bg-white/20 transition-colors duration-300 ease-in-out disabled:text-white/20" >Enviar</button>
                </div>
            </form>
        </div>
        <div class="pt-14 flex flex-col items-center gap-10">
            <hr class="h-0.5 w-full bg-white/20" />
            <p class="text-base text-center font-normal text-white/50 tracking-[10%]">
                © 2025 DragonPunchSpiderZ. Todos los derechos reservados.
            </p>
        </div>
    </section>
</footer>
