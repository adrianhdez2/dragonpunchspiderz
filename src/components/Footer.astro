---
import { redes } from "@/utils/constants";
import Form from "./Form.astro";
---

<footer class="flex flex-col -space-y-[130px]">
    <div class="flex mx-auto flex-col items-center justify-center gap-4 z-10">
        <img
            src="/footer_img.webp"
            alt="Imagen de DragonPunchSpiderZ"
            width="220"
            height="220"
            class="aspect-square rounded-full"
        />
        <ul class="flex items-center gap-10">
            {
                redes.map((red) => (
                    <li>
                        <a
                            class="text-[#BBBBBA] hover:text-white transition-colors duration-300"
                            target="_blank"
                            rel="noopener noreferrer"
                            href={red.url}
                        >
                            <red.icon class="w-auto h-6" />
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
    <section id="contacto" class="bg-black p-6 md:px-14 md:pb-8 xl:px-28 pt-52 xl:pb-14 gap-14 shadow-footer">
        <div class="w-full">
            <!-- <Form /> -->
        </div>
        <div class="pt-14 flex flex-col items-center gap-10">
            <hr class="h-0.5 w-full bg-white/20" />
            <p class="text-base text-center font-normal text-white/50 tracking-[10%]">
                Â© 2025 DragonPunchSpiderZ. Todos los derechos reservados.
            </p>
        </div>
    </section>
</footer>
